{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "extends": "standard",
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true,
    "mocha": true
  },
  "rules": {
    "semi": 0,
    "space-infix-ops": [
      2,
      {
        "int32Hint": false
      }
    ],
    "space-before-function-paren": 0,
    "strict": 0,
    "arrow-parens": [
      2,
      "as-needed"
    ]
  },
  "plugins": [
    "standard"
  ]
}
